<config xmlns='http://www.ehcache.org/v3'
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <!-- Default configuration for all caches -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

    <!-- Specific cache for reference entities -->
    <cache alias="fr.diginamic.geoff.entity.Pays" uses-template="default">
        <heap unit="entries">300</heap>
    </cache>

    <cache alias="fr.diginamic.geoff.entity.Genre" uses-template="default">
        <heap unit="entries">100</heap>
    </cache>

    <cache alias="fr.diginamic.geoff.entity.Langue" uses-template="default">
        <heap unit="entries">100</heap>
    </cache>
</config>